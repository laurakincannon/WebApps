@model WDLMassage.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Staff Member Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameFull)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedPhone)
        </dd>
        <dt class = "col-sm-2">
            UserName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActiveStatus)
        </dd>
    </dl>
</div>
<div>
    @if (Model.IsActive == true)
    {
        <a asp-action="Deactivate" asp-route-id="@Model.UserPk">Deactivate</a>
    }
    else
    {
        <a asp-action="Activate" asp-route-id="@Model.UserPk">Activate</a>
    } |
    <a asp-action="Index">Back to Staff List</a>
</div>
